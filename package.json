{
  "name": "@octokit/auth",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0-development",
  "description": "GitHub API authentication library for browsers and Node.js",
  "scripts": {
    "build": "pika build",
    "test": "jest --coverage",
    "semantic-release": "semantic-release"
  },
  "repository": "https://github.com/octokit/auth.js",
  "keywords": [
    "github",
    "octokit",
    "authentication",
    "api"
  ],
  "author": "Gregor Martynus (https://github.com/gr2m)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/octokit/auth.js/issues"
  },
  "homepage": "https://github.com/octokit/auth.js#readme",
  "browser": {
    "@octokit/auth-action": "./pkg/dist-src/auth-action-browser.js"
  },
  "dependencies": {
    "@octokit/auth-action": "^1.1.0",
    "@octokit/auth-app": "^2.4.0",
    "@octokit/auth-basic": "^1.3.0",
    "@octokit/auth-oauth-app": "^3.0.0",
    "@octokit/auth-token": "^2.4.0"
  },
  "devDependencies": {
    "@gr2m/pika-plugin-build-web": "^0.6.0-issue-84.2",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.1",
    "@pika/plugin-ts-standard-pkg": "^0.9.1",
    "@types/jest": "^26.0.0",
    "jest": "^26.0.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "semantic-release": "^17.0.0",
    "ts-jest": "^26.0.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@gr2m/pika-plugin-build-web"
      ]
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ]
    ]
  }
}
